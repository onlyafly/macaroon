(load "examples/prelude.mn")
(load "examples/mtest.mn")

;;;;;;;;;; Tests

(defmtest "Truthful values in 'if'"
  (mt= (list
       (if (quote true) 1 2)
       (if true 1 2))
     '(1 1)))

(defmtest "Recursion"
  (mt=
    '(nil nil 5)
    (list
      (defn bar (exps)
        exps)

      (defn foo (exps)
        (if (list? exps)
          (if (not (empty? (rest exps)))
            (begin
              (bar (first exps))
              (foo (rest exps)))
            (bar (first exps)))
          (list)))

      (foo '(4 5))
      )
    ))

(defmtest "Case macro"
  (mt= (macroexpand1 '(case (+ 1 2) 1 'a 2 'b))
       '(let (____case1 (+ 1 2))
          (cond
            (= ____case1 1) 'a
            (= ____case2 2) 'b
            ))
       ))

(mtest-start)